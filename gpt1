#домашнє завдання 1 від GPT 

from datetime import datetime

def get_days_from_today(date_str):
    date_now = datetime.now()

    try:
        # Parse the input string to a date object
        target_date = datetime.strptime(date_str, "%Y-%m-%d")
    except ValueError:
        # If the date format is incorrect, print a message and stop execution
        print("Невірний формат дати. Очікується формат YYYY-MM-DD.")
        return

    # Calculate the difference in days using timedelta
    days_difference = abs((date_now - target_date).days)
    print(days_difference)
    return days_difference

# Example usage
get_days_from_today("2024-09-14")
